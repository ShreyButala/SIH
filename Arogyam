    function renderDashboardCharts() {
      // Chart 1: User Queries
      const ctx1 = document.getElementById('userQueriesChart');
      new Chart(ctx1.getContext('2d'), {
        type: 'line',
        data: {
          labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
          datasets: [{
            label: 'User Queries',
            data: [120, 150, 200, 250, 300, 350],
            borderColor: '#10b981',
            backgroundColor: 'rgba(16, 185, 129, 0.2)',
            fill: true,
            tension: 0.4,
            borderWidth: 3,
            pointBackgroundColor: '#10b981',
            pointRadius: 5
          }]
        },
        options: { responsive: true, maintainAspectRatio: false, scales: { x:{ grid:{ display:false } }, y:{ beginAtZero:true, grid:{color:'#e2e8f0'} } } }
      });

      // Chart 2: Most Common Symptoms
      const ctx2 = document.getElementById('symptomsChart');
      new Chart(ctx2.getContext('2d'), {
        type: 'doughnut',
        data: {
          labels: ['Fever', 'Cough', 'Body Ache', 'Sore Throat', 'Dizziness'],
          datasets: [{
            data: [30,25,15,10,5],
            backgroundColor: ['#ef4444','#3b82f6','#f59e0b','#10b981','#6366f1'],
            borderColor: 'white',
            borderWidth:2
          }]
        },
        options: { responsive:true, maintainAspectRatio:false, plugins:{legend:{position:'bottom'}} }
      });

      // Chart 3: Awareness Growth
      const ctx3 = document.getElementById('awarenessChart');
      new Chart(ctx3.getContext('2d'), {
        type: 'bar',
        data: {
          labels: ['Q1','Q2','Q3','Q4'],
          datasets: [{
            label: 'Awareness Growth (%)',
            data: [5,12,18,20],
            backgroundColor: '#059669',
            borderRadius:8
          }]
        },
        options: {
          responsive:true,
          maintainAspectRatio:false,
          scales:{
            x:{ grid:{display:false} },
            y:{ beginAtZero:true, grid:{color:'#e2e8f0'} }
          }
        }
      });

      // populate vaccination table
      const vaccinationData = [
        { vaccine: 'Measles', location: 'Primary Health Centre, Ahmedabad', date: '2025-10-05' },
        { vaccine: 'Polio', location: 'Civil Hospital, Ahmedabad', date: '2025-10-12' },
        { vaccine: 'Dengue', location: 'Community Hall, Ahmedabad', date: '2025-10-19' }
      ];
      const tableBody = document.getElementById('vaccinationTable');
      if (tableBody) {
        tableBody.innerHTML = '';
        vaccinationData.forEach(row => {
          const tr = document.createElement('tr');
          tr.className = 'border-b border-slate-200 last:border-0 hover:bg-slate-50';
          tr.innerHTML = `<td class="py-3 px-4">${row.vaccine}</td><td class="py-3 px-4">${row.location}</td><td class="py-3 px-4">${row.date}</td>`;
          tableBody.appendChild(tr);
        });
      }
    }

    // Form submit
    document.getElementById('userForm').addEventListener('submit', function(e){
      e.preventDefault();
      const msg = document.getElementById('form-message');
      if (msg) {
        msg.textContent = 'Thank you! Your information has been submitted successfully.';
        msg.classList.remove('hidden');
      }
      this.reset();
    });
    document.getElementById('connectForm').addEventListener('submit', function(e){
      e.preventDefault();
      const msg = document.getElementById('connect-message');
      if (msg) {
        msg.textContent = 'Thank you! Your details have been submitted. A connection will be established shortly.';
        msg.classList.remove('hidden');
      }
      this.reset();
    });

    // Initial: show home
    showPage('home');

  </script>
